.item-group {
  margin-top: 30px;
  display: inline-block;
  width: 100px;
  margin-right: 8px;
}

.item-group::last-of-type {
  margin-right: 0;
}

.item-group .thumbnail {
  display: block;
  width: 100%;
  height: 140px;
}

.item-group .item-title {
  margin-top: 14px;
  font-size: 16px;
  color: #494949;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.item-group .item-rating-group {
  margin-top: 12px;
  font-size: 14px;
  color: #afafaf;
  text-align: center;
}

.item-rating-group image {
  width: 13px;
  height: 13px;
}
