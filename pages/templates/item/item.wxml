<template name="item">
  <view class="item-group">
    <navigator url="../detail/detail?id={{item.id}}&category={{item.category}}&title={{item.title}}">
      <image src="{{item.cover.url}}" class="thumbnail"></image>
    </navigator>
    <view class="item-title">{{item.title}}</view>
    <view class="item-rating-group">
      <image src="../images/rate_light.png" wx:for="{{item.rating.lights}}"></image>
      <image src="../images/rate_half.png" wx:for="{{item.rating.halfs}}"></image>
      <image src="../images/rate_gray.png" wx:for="{{item.rating.grays}}"></image>
      {{item.rating.value}}
    </view>
  </view>
</template>